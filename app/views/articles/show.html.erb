<div id="page-content">
  <h1 class="text-center mt-4"><%= @article.title %></h1>

  <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-8">  
        <div class="card text-center mt-4 shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by Sagar Shanbhag
          </div>
          <div class="card-body">
            <div class="card-text text-justify"><%= simple_format(@article.description) %></div>
            <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-info" %></button>
            <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "Are you sure? "}, class: "btn btn-outline-danger" %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@article.created_at) %> ago, 
            edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
          </div>
          </div>  
        </div>
      </div>
    </div>
</div>