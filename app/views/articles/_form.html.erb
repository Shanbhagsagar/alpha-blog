<div class="container">
<% if @article.errors.any? %>
  <h2>The following errors prevented the article from saving</h2>
  <ul>
   <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
   </ul>
<% end %>


<%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local:true)  do |f| %>

      <div class="form-group">
       <%= f.label :title, for: "Title", class: "text-light" %>
       <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Enter Title" %>
       </div>

       <div class="form-group">
          <%= f.label :description , for: "Description", class: "text-light" %>
          <%= f.text_area :description, rows: 10,  class: "form-control shadow rounded", placeholder: "Enter Description" %>
      </div>

      <div class="form-group row justify-content-center">
       <%= f.submit class: "btn btn-outline-light btn-lg" %>
       </div>
    
 <% end %>   
 <div class="row justify-content-center">
 <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
 </div>
 </div>